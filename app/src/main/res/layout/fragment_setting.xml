<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_setting" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_manage_account"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:gravity="start"
        android:paddingVertical="16dp"
        android:text="Quản lý account"
        android:textColor="#2C3D7A"
        android:textSize="16sp"
        app:backgroundTint="#DBDBFF"
        app:icon="@drawable/ic_user"
        app:iconSize="24dp"
        android:visibility="gone"
        app:iconTint="#1D2970"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_manage_domain"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:gravity="start"
        android:paddingVertical="16dp"
        android:text="Quản lý domain"
        android:textColor="#2C3D7A"
        android:textSize="16sp"
        app:backgroundTint="#DBDBFF"
        app:icon="@drawable/ic_user"
        app:iconSize="24dp"
        app:iconTint="#1D2970"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_sign_out"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="start"
        android:paddingVertical="16dp"
        android:layout_marginTop="15dp"
        android:text="Đăng xuất"
        android:textColor="#2C3D7A"
        android:textSize="16sp"
        app:backgroundTint="#DBDBFF"
        app:icon="@drawable/ic_exit"
        app:iconSize="24dp"
        app:iconTint="#1D2970"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_manage_domain"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
